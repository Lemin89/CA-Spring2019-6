  <suggestedCameraView>
    <position> <x>0</x> <y>35</y> <z>-10</z> </position>
    <lookat> <x>0</x> <y>0</y> <z>0</z> </lookat>
    <up> <x>0</x> <y>1</y> <z>0</z> </up>
    <fovy>45</fovy>
  </suggestedCameraView>

  <obstacle>
    <xmin>-3</xmin>
    <xmax>15</xmax>
    <ymin>0</ymin>
    <ymax>1</ymax>
    <zmin>-3</zmin>
    <zmax>-2</zmax>
  </obstacle>

  <obstacle>
