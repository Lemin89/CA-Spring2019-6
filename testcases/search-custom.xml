  <agent>
    <name>A</name>
    <initialConditions>
      <radius>0.3</radius>
      <position> <x>-0.5</x> <y>0</y> <z>10</z> </position>
      <direction> <x>0</x> <y>0</y> <z>1</z> </direction>
      <speed>1.3</speed>
    </initialConditions>
    <goalSequence>
      <seekStaticTarget>
        <targetLocation> <x>16</x> <y>0</y> <z>0</z> </targetLocation>
        <desiredSpeed>1.3</desiredSpeed>
        <timeDuration>10000.0</timeDuration>
